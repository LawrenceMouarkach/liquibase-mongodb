                  "validator": {
                    "$jsonSchema": {
                      "bsonType": "object",
                      "required": [
                        "name",
                        "address"
                      ],
                      "properties": {
                        "name": {
                          "bsonType": "string",
                          "description": "The Name"
                        },
                        "address": {
                          "bsonType": "string",
                          "description": "The Address"
                        }
                      }
                    }
                  },
                  "validationAction": "warn",
                  "validationLevel": "strict"
                }
              }
            }
          }
        ]
      }
    }
  ]
}