{
  "databaseChangeLog": [
    {
      "property": {
        "name": "collection.name",
        "value": "person"
      }
    },
    {
      "changeSet": {
        "id": "1",
        "author": "alex",
        "changes": [
          {
            "createCollection": {
              "collectionName": "${collection.name}"
            }
          },
          {
            "createCollection": {
              "collectionName": "person1",
